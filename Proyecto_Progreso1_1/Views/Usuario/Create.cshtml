@model Usuario
@{
    ViewData["Title"] = "Creación de Prendas";
}

<h1>@ViewData["Title"]</h1>
<p>En esta página se crean los productos.</p>

<form method="post">
    <div class="mb-3">
        <label class="form-label">Usuario</label>
        <input asp-for="usuario" class="form-control" />
    </div>
    <div class="mb-3">
        <label class="form-label">Contrasenia</label>
        <input asp-for="contrasena" class="form-control">

    </div>

    <div class="row">
        <div class="col-6">
            <button type="submit" class="btn btn-primary">Guardar</button>
        </div>
        <div class="col-6">
            <button type="button" class="btn btn-success" onclick="location.href='@Url.Action("Index","Usuario")'">Cancelar</button>
        </div>
    </div>
</form>